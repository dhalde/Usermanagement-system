{{#each users }}
<tr>
    <td>{{incremented @index}}</td>
    <td>{{name}}</td>
    <td>{{email}}</td>
    <td>{{gender}}</td>
    <td>{{status}}</td>
    <td>

        <a href="/update-user?id={{_id}}" class="btn border-shadow update">
            <span class="text-gradient">
                <i class="fas fa-pencil-alt"></i>
            </span>
        </a>
        <a href="#" class="btn border-shadow delete" data-id="{{_id}}">
            <span class="text-gradient">
                <i class="fa-sharp fa-solid fa-trash"></i>
            </span>
        </a>
    </td>
</tr>
{{/each}}